@model List<MarvelCatalog_App.Areas.Admin.Models.CharactersAdminViewModel>
@{
    ViewBag.Title = "GetAllChracters";
    var type = "success";
    WebGrid grid = new WebGrid(Model, rowsPerPage: 10);
}
@Html.Partial("SearchPartial")

@grid.GetHtml(
    tableStyle: "table table-bordered table-striped table-responsive",
    headerStyle: "text-center",
    columns: grid.Columns(
        grid.Column("Id", "Id"),
        grid.Column("CreatedOn", "CreatedOn"),
        grid.Column("DeletedOn", "DeletedOn"),
        grid.Column("isDeleted", "isDeleted"),
        grid.Column("ModifiedOn", "ModifiedOn"),
        grid.Column("Image", "Image"),
        grid.Column("Name", "Name"),
        grid.Column(columnName: "", format: (item) => Html.ActionLink("Edit", "GetCharacterById", "CharactersAdministration", new { id = item.Id }, new { @class = "btn btn-primary" }))
))

